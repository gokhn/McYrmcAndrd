<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundcolor"

    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:id="@+id/btn_quit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="18dp"
            android:layout_alignParentRight="true"
            android:paddingRight="18dp">
            <TextView
                android:id="@+id/txt_region_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/quit"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/logo"
            />

        <TextView
            android:id="@+id/txt_refno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/btn_match_reviews"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="38dp"
            android:gravity="center"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="31dp"
            android:background="@drawable/login_btn_bg"
            android:text="@string/matchreviews"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/btn_won_coupons"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/btn_match_reviews"
            android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp"
            android:gravity="center"
            android:background="@drawable/login_btn_bg"
            android:text="@string/woncoupons"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/btn_coupons"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/btn_match_reviews"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@drawable/login_btn_bg"
            android:text="@string/coupons"
            android:textColor="@color/white"
            android:textSize="12sp" />



    </RelativeLayout>

</LinearLayout>
