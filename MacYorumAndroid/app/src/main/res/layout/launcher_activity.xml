<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:alpha="0.5"
        android:background="@drawable/group_78"
        >

        <TextView
            android:id="@+id/txt_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hoşgeldiniz"
            android:textColor="@color/white"
            android:textSize="34dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>


    <ImageView
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:src="@drawable/logo" />



    <LinearLayout

        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="140dp"
        >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingBottom="80dp">

        <TextView
            android:id="@+id/txt_description1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Kazandıran Kuponlar ve Maç Yorumlarını"
            android:lines="1"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txt_description2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Görmek için Giriş Yapınız."
            android:gravity="center"
            android:lines="2"
            android:layout_marginTop="10dp"
            android:paddingBottom="21dp"
            android:textColor="@color/white"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            >


            <TextView
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:id="@+id/txt_signin"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textColor="#fff"
                android:background="#2b73e1"
                android:padding="10dp"
                android:gravity="center"
                />


            <TextView
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:id="@+id/txt_signup"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/signup"
                android:textColor="#fff"
                android:background="@color/signupbuttoncolor"
                android:padding="10dp"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>



